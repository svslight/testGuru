<% if resource.present? && resource.errors.any? %>
  <!-- .resource-errors вызывается из app/assets/javascripts/utilities/form_inline.js -->
  <%= content_tag :div, class: 'resource-errors', data: { resource_id: resource.id } do %>
    <h2>
      <%= t('.header', count: resource.errors.count )%>:
    </h2>

    <ul>
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
<% end %>
