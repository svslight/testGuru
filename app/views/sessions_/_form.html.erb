<%= form_with url: sessions_path, local: true do |form| %>
  <%# if flash[:alert] %>
    <%# = content_tag :p, flash[:alert], class: 'flash alert' %>
  <%# end %>

  <%# app/helpers/sessions_helper.rb %>
  <%= flash_message(:alert) if flash[:alert] %>

  <p>
    <%= form.label :email, 'Электронная почта' %><br>
    <%= form.text_field :email, id: :email %>
  </p>

  <p>
    <%= form.label :password, 'Пароль' %><br>
    <%= form.password_field :password, id: :password %>
  </p>

  <p><%= form.submit 'Вход' %></p>
<% end %>
