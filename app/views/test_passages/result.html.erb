<!--h1>Тест по теме: <%= @test_passage.test.title %>. Завершен! </h1-->

<div class="row justify-content-center mt-3">
  <div class="col col-md-6">

    <div class="card text-center">
      <div class="card-header">
        <h3><%= t('.header', title: @test_passage.test.title) %></h3>
      </div>

      <div class="card-body">
        <% if @test_passage.success? %>
          <div class='success'>  
            <%= t('.congratulations', percent: @test_passage.percent_correct_answers) %>
          </div><br>

          <% if @badges.present? %>
            <% @badges.each do |badge| %>
              <div><%= image_tag(badge.image, width: '50') %></div><br>
              <div><%= t('.badge') %></div>
            <% end %>
          <% end %>

        <% else %>
          <span class='failure'> 
            <%= t('.lose', percent: @test_passage.percent_correct_answers) %>
          </span>
        <% end %>
      </div>

      <div class="card-footer">
        <p><%= link_to t('.back'), tests_path, class: 'btn btn-sm btn-primary mt-2' %> </p>
      </div>
    </div>
  </div>
</div>
