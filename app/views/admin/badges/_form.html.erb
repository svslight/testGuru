<%= form_with model: [:admin, @badge], local: true do |form| %>
  <div class="form-group">
  
    <%= render 'shared/errors', resource: @badge %>

    <p>
      <%= form.label :title %><br>
      <%= form.text_field :title, class: "form-control" %> 
    </p>

    <p>
      <%= form.label :image %><br>
      <%= form.collection_select :image, Badge::IMAGES, :last.to_s, :first.to_s, prompt: true, class: "form-control" %>
    </p>

    <p>
      <%= form.label :rule_type %><br>
      <%= form.select :rule_type, Badge::RULE_TYPES, {prompt: 'Выбрать из списка'}, class: "form-control" %>
    </p>

    <p>
      <%= form.label :rule_value %><br>
      <%= form.select :rule_value, Badge::RULE_VALUES, {prompt: 'Выбрать из списка'}, class: "form-control" %> 
    </p><br>

    <p><%= form.submit %></p>
  </div>
<% end %>
