<%= form_with model: [:admin, @test, @question], local: true do |form| %>
  <%= render 'shared/errors', resource: @question %>

  <p>
    <%= form.label :body, 'Название вопроса:' %><br>
    <%= form.text_field :body, id: :question_body, rows: 7, cols: 60  %>
  </p>

  <p><%= form.submit %></p>
<% end %>
