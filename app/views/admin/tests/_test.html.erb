  <td><%= link_to t('.show'), admin_test_path(test), class: 'btn btn-sm btn-outline-primary' %></td>      <!-- Просмотреть -->
  <td><%= link_to t('.edit'), edit_admin_test_path(test), class: 'btn btn-sm btn-outline-primary' %></td> <!-- Редактировать --> 
  <td><%= link_to t('.delete'), admin_test_path(test),              
          method: :delete, 
          data: { confirm: t('.choice') }, class: 'btn btn-sm btn-outline-primary' %>                    <!-- Вы уверены? -->
  </td>
</tr>
