<div class="row justify-content-center mt-3">
  <div class="col col-md-10">

    <h2><%= t('.header') %></h2>

    <p>
      <%= link_to t('.new_test'),  new_admin_test_path, class: 'btn btn-sm btn-outline-primary' %>
    </p>

    <%= render 'shared/errors', resource: @test %>

    <table class="table table-hover table-bordered table-sm">
      <thead class="thead-light">
        <tr>
          <th class="sort-by-title pointer">
            <%= t('.title') %>
            <%= octicon 'arrow-up', class: 'text-success hide' %>
            <%= octicon 'arrow-down', class: 'text-success hide' %>
          </th>
          <th><%= t('.level') %></th>
          <th><%= t('.questions') %></th>
          <th><%= t('.category') %></th>
          <th colspan="3"><%= t('.actions') %></th>
        </tr>
      </thead>

      <%= render @tests %>
    </table>
  </div>
</div>
