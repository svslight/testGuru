<div class="row justify-content-center mt-3">
  <div class="col col-md-6">

    <h2><%= t('.header') %></h2>

    <p>
      <%= link_to t('.new_test'),  new_admin_test_path, class: 'btn btn-sm btn-outline-primary' %>
    </p>

    <table class="table table-hover table-bordered table-sm">
      <thead class="thead-light">
        <tr>
          <th><%= t('.title') %></th>                   <!-- Название -->
          <th><%= t('.level') %></th>                   <!-- Уровень -->
          <th><%= t('.questions') %></th>               <!-- Вопросы -->
          <th colspan="3"><%= t('.actions') %></th>     <!-- Действия -->
        </tr>
      </thead>

      <%= render @tests %>
    </table>
  </div>
</div>
